@inject NavigationManager Navigation

<div class="col-lg-3 col-xs-6">
    <div class="small-box small-box-custom @BackgroundColor">
        <div class="inner">
            <h4 class="text-bold" style="font-size: large;">
                <sup>@CurrencyCode</sup> @String.Format("{0:N0}", Amount)
            </h4>
        </div>
        <div class="icon">
            <i class="ion @IconClass"></i>
        </div>
        <a id="linkbutton" href="@Navigation.ToAbsoluteUri(Link)" class="small-box-footer">@LinkText</a>
    </div>
</div>

@code {
    // Parameters for customizing the component
    [Parameter] public string BackgroundColor { get; set; } = "bg-aqua"; // Bootstrap color class
    [Parameter] public string CurrencyCode { get; set; } = "$"; // Default to $
    [Parameter] public decimal Amount { get; set; } // Numeric amount to display
    [Parameter] public string IconClass { get; set; } = "ion-clock"; // Default icon
    [Parameter] public string Link { get; set; } = "#"; // Link for footer
    [Parameter] public string LinkText { get; set; } = "More Info"; // Footer text
}
