@inherits BaseComponent
@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private void Confirm() => OnClose.InvokeAsync(true);
    private void Cancel() => OnClose.InvokeAsync(false);
}

<div class="modal" tabindex="-1" style="display:@(IsVisible ? "block" : "none")">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Tralnslate?.GetTranslation("Disconnect")</h5>
                @*<button type="button" class="btn-close" @onclick="Cancel"></button>*@
            </div>
            <p>@Tralnslate?.GetTranslation("Are you sure you want to Disconnect this device?")</p>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" @onclick="Confirm">@Tralnslate?.GetTranslation("Yes")</button>
                <button type="button" class="btn btn-primary" @onclick="Cancel">@Tralnslate?.GetTranslation("No")</button>
            </div>
        </div>
    </div>
</div>
